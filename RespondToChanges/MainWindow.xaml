<Window
    x:Class="RespondToChanges.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RespondToChanges"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="600"
    Height="350"
    mc:Ignorable="d">
    <DockPanel Margin="10">
        <StackPanel Margin="5" DockPanel.Dock="Right">
            <Button
                x:Name="btnAddUser"
                Width="150"
                Click="btnAddUser_Click">
                Add user
            </Button>
            <Button
                x:Name="btnChangeUser"
                Width="150"
                Click="btnChangeUser_Click">
                Change user
            </Button>
            <Button x:Name="btnDeleteUser" Width="150" Click="btnDeleteUser_Click">Delete user</Button>
        </StackPanel>
        <ListBox
            x:Name="lbUsers"
            Margin="5"
            DisplayMemberPath="Name" />

    </DockPanel>
</Window>
